        $("#tipName").hide();
        $("#tipBirthday").hide();
        $("#tipGender").hide();

        var country = $("#country").val()
        if (country == "") {
            $("#tipCountry").show();
            return false;
        }
        var name = $("#name").val()
        if (name == "") {
            $("#tipName").show();
            return false;
        }
        var birthday = $("#birthday").val()
        if (birthday == "") {
            $("#tipBirthday").show();
            return false;
        }
        var gender = $("#gender").val()
        if (gender == "") {
            $("#tipGender").show();
            return false;
        }
        return true
    }
</script>

