<script type="text/javascript">

    function Send() {

        $("#tipEmail").hide();
        $("#tipEmail2").hide();
        $("#tipPassword1").hide();
        $("#tipPassword2").hide();

        var email = $("#email").val()
        var reg = new RegExp("^[a-z0-9]+([._\\-]*[a-z0-9])*@@([a-z0-9]+[-a-z0-9]*[a-z0-9]+.){1,63}[a-z0-9]+$"); //正则表达式
        if (email == "" || !reg.test(email)) {
            $("#tipEmail").show();
            return false;
        }

        var password1 = $("#password1").val()
        if (password1 == "" || password1.length < 6 || password1.length > 15) {
            $("#tipPassword1").show();
            return false;
        }
        var password2 = $("#password2").val()
        if (password2 == "" || password1 != password2) {
            $("#tipPassword2").show();
            return false;
        }

        if (!$("#rmbUser").get(0).checked) {
            return false;
        }

        var country = document.getElementById("country").value;

        $.ajax({
            url: "/User/IsEmail",
            type: "POST",
            async: false,
            data: { email: email },
            success: function (result) {
                if (!result.data) {
                    $.ajax({
                        url: "/User/Register",
                        type: "POST",
                        async: false,
                        data: {
                            email: email,
                            password: password1,
                            country: country
                        },
                        success: function (result) {
                            if (result.code == "200") {
                                if (result.data) {
                                    window.location.href = "/User/Login"; 
                                } else {
                                    alert("fail to register")
                                }
                            }
                            else {
                                alert(result.error)
                            }
                        }

                    });
                } else {
                    $("#tipEmail2").show();
                }
            }
        });
    }
    
   
</script>