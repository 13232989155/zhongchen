
@model bool


<section class="sec sec2" style="background-color:antiquewhite">
    <div class="row boxed clearfix productVideo">
        @if (Model)
        {
            <div class="col-12" style="text-align:left; color:red">
                <h4>
                    已成功提交！
                </h4>
            </div>
        }
       

        <div class="col-12 productVideo" style="padding-bottom:30px">
            <div class="col-12 productVideo">
                <form method="post">
                    <div class="col-12 productVideo">
                        <div class="col-12 productVideo" style="text-align:left">
                            <label>
                                Name:
                            </label>
                        </div>

                        <div class="col-12 productVideo">
                            <input name="name" id="name" style="border: 1px solid #cfcfcf; border-radius: 0; box-shadow: none; width:100%; height:30px;" />
                            <p id="tipName" style="color:red; text-align:left;" hidden>不能为空</p>
                        </div>
                    </div>

                    <div class="col-12 productVideo">
                        <div class="col-12 productVideo" style="text-align:left">
                            <label>
                                Tel:
                            </label>
                        </div>

                        <div class="col-12 productVideo">
                            <input name="tel" id="tel" style="border: 1px solid #cfcfcf; border-radius: 0; box-shadow: none; width:100%; height:30px;" />
                        </div>
                    </div>

                    <div class="col-12 productVideo">
                        <div class="col-12 productVideo" style="text-align:left">
                            <label>
                                Email:
                            </label>
                        </div>

                        <div class="col-12 productVideo">
                            <input name="email" id="email" style="border: 1px solid #cfcfcf; border-radius: 0; box-shadow: none; width:100%; height:30px;" />
                        </div>
                    </div>

                    <div class="col-12 productVideo">
                        <div class="col-12 productVideo" style="text-align:left">
                            <label>
                                Subject:
                            </label>
                        </div>

                        <div class="col-12 productVideo">
                            <input name="subject" id="subject" style="border: 1px solid #cfcfcf; border-radius: 0; box-shadow: none; width:100%; height:30px;" />

                        </div>
                    </div>

                    <div class="col-12 productVideo">
                        <div class="col-12 productVideo" style="text-align:left">
                            <label>
                                Message:
                            </label>
                        </div>

                        <div class="col-12 productVideo">
                            <textarea name="message" id="message" rows="5" style="border: 1px solid #cfcfcf; border-radius: 0; box-shadow: none; width:100%; height:150px;"></textarea>
                            <p id="tipMessage" style="color:red; text-align:left;" hidden>不能为空</p>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-default" style="margin-top:13px;" onclick="return Send()">Send</button>
                </form>
            </div>

        </div>


    </div>
</section>

<script type="text/javascript">

    function Send() {

        $("#tipName").hide();
        $("#tipMessage").hide();

        if ($("#name").val() == "") {
            
            $("#tipName").show();

            return false;
        }

        if ($("#message").val() == "") {

            $("#tipMessage").show();

            return false;
        }

        return true;
    }


</script>