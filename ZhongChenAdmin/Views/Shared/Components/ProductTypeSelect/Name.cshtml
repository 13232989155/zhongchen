@model List<Entity.ProductTypeEntity>
@{
    int productTypeId = ViewBag.productTypeId;

}
<select name="@(string.IsNullOrWhiteSpace(ViewBag.docName) ? "productTypeId" : ViewBag.docName)" class="form-control  border-input">

    @foreach (var item in Model)
    {
        if (item.productTypeId == productTypeId)
        {
            <option value="@item.productTypeId" selected>@item.name</option>
        }
        else
        {
            <option value="@item.productTypeId">@item.name</option>
        }
    }

</select>