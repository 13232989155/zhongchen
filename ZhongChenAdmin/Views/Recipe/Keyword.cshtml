

@model Entity.RecipeEntity
@{ 
    List<Entity.RecipeKeyEntity> recipeKeyList = ViewBag.recipeKeyList;
}

<div class="col-md-12">
    <div class="card">
        <div class="header">
            <h4 class="title">设置关键字</h4>
        </div>
        <div class="content">
            <form asp-action="SetKeyword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="recipeId" class="control-label">ID</label>
                            <input readonly asp-for="recipeId" class="form-control border-input" />
                            <span asp-validation-for="recipeId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="title" class="control-label">标题</label>
                            <input disabled asp-for="title" class="form-control border-input" />
                            <span asp-validation-for="title" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label">勾选需要的关键字:</label>
                            <br />
                            @await Component.InvokeAsync("KeywordCheck", new { docName = "strKeyword", recipeKeyList = recipeKeyList })
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <input id="btnSure" type="submit" class="btn btn-info btn-fill btn-wd" value="确 定" />
                    &nbsp;
                    <a asp-action="List" class="btn btn-round btn-fill btn-wd">返回列表</a>
                </div>
                <div class="clearfix"></div>
            </form>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {

        $("#liRecipe").addClass("active");

    });
</script>
