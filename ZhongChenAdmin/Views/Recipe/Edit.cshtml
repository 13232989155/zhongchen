    //显示图片
    function ShowImg(file, domId) {
        var reader = new FileReader();
        reader.readAsDataURL(file);
        reader.onload = function (e) {
            // 创建对象
            var img = new Image();

            // 改变图片的src
            img.src = e.target.result;

            // 判断是否有缓存
            if (img.complete) {
                if (img.width == 500 && img.height == 300) {
                    $("#" + domId).attr("src", e.target.result);
                } else {
                    $(":file").val("");
                    $("#" + domId).attr("src", "");
                }
            } else {
                // 加载完成执行
                img.onload = function () {
                    if (img.width == 500 && img.height == 300) {
                        $("#" + domId).attr("src", e.target.result);
                    } else {
                        $(":file").val("");
                        $("#" + domId).attr("src", "");
                    }
                };
            }
        }
    }

