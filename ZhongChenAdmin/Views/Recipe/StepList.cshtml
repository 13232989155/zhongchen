

@model Entity.RecipeEntity
<div class="col-md-12">
    <div class="card">
        <div class="header">
            <h4 class="title">食谱</h4>
        </div>
        <div class="content">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="recipeId" class="control-label">ID</label>
                        <input readonly asp-for="recipeId" class="form-control border-input" />
                        <span asp-validation-for="recipeId" class="text-danger"></span>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="col-md-12">
    <div class="content">
        <div class="col-md-12">
            <div class="header">
                <h4 class="title">步骤</h4>
            </div>
            <div class="content">

                @await Component.InvokeAsync("ListRecipeStep", new { recipeId = Model.recipeId })

            </div>
        </div>

        <div class="text-center">
            <a asp-action="CreateStep" asp-route-recipeId="@Model.recipeId" class="btn btn-info btn-fill btn-wd">添加步骤</a>
            &nbsp;
            <a asp-action="List" class="btn btn-round btn-fill btn-wd">返回列表</a>
        </div>
        <div class="clearfix"></div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#liRecipe").addClass("active");
    })
</script>