@model Entity.AdminEntity
<div class="col-md-12">
    <div class="card">
        <div class="header">
            <h4 class="title">修改密码</h4>
        </div>
        <div class="content">
            <form method="post" onsubmit="return Check()">
                <input name="adminId" type="hidden" value="@Model.adminId" />
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>新密码</label>
                            <input name="pwd1" id="pwd1" type="password" class="form-control border-input" placeholder="新密码" onchange="PwdChange()" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>确认密码</label>
                            <input name="pwd2" id="pwd2" type="password" class="form-control border-input" placeholder="确认密码" onchange="PwdChange()" />
                            <p class="tip" id="tip" style="color:red" hidden>两次密码不一样</p>
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <input id="btnSure" type="submit" class="btn btn-info btn-fill btn-wd" value="确 定" />
                    <input id="btnBack" type="button" class="btn btn-round btn-fill btn-wd" value="返 回" />
                </div>
                <div class="clearfix"></div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        $("#liSelf").addClass("active");
        $("#btnBack").click(function () {
            window.history.back(-1);
        });
    });

    function PwdChange() {
        $("#tip").hide()
    }

    function Check() {
        var pwd1 = $("#pwd1").val();
        var pwd2 = $("#pwd2").val();
        if (pwd1 != pwd2 || pwd1 == "" || pwd2 == "") {
            $("#tip").show()
            return false;
        }
        return true;
    }
</script>
