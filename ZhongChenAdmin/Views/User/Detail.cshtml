@model Entity.UserEntity

<div class="col-md-12">
    <div class="card">
        <div class="header">
            <h4 class="title">详细</h4>
        </div>
        <div class="content">
            <form>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="userId" class="control-label">ID</label>
                            <input readonly asp-for="userId" class="form-control border-input" />
                            <span asp-validation-for="userId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="userName" class="control-label">用户名</label>
                            <input readonly asp-for="userName" class="form-control border-input" />
                            <span asp-validation-for="userName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="name" class="control-label">姓名</label>
                            <input readonly asp-for="name" class="form-control border-input" />
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="account" class="control-label">账号</label>
                            <input readonly asp-for="account" class="form-control border-input" />
                            <span asp-validation-for="account" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="password" class="control-label">密码</label>
                            <input readonly asp-for="password" class="form-control border-input" value="******" />
                            <span asp-validation-for="password" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="gender" class="control-label">性别</label>
                            <input readonly class="form-control border-input" value="@( Model.gender == 0 ? "女" : Model.gender == 1 ? "男" : "未设置" )" />
                            <span asp-validation-for="gender" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="birthday" class="control-label">出生日期</label>
                            <input readonly asp-for="birthday" class="form-control border-input" type="date" style="width:200px" />
                            <span asp-validation-for="birthday" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="phone" class="control-label">手机号码</label>
                            <input readonly asp-for="phone" class="form-control border-input" />
                            <span asp-validation-for="phone" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="email" class="control-label">邮箱</label>
                            <input readonly asp-for="email" class="form-control border-input" />
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="FaceBook" class="control-label">FaceBook账号</label>
                            <input readonly asp-for="FaceBook" class="form-control border-input" />
                            <span asp-validation-for="FaceBook" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Instagram" class="control-label">Instagram账号</label>
                            <input readonly asp-for="Instagram" class="form-control border-input" />
                            <span asp-validation-for="Instagram" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Twitter" class="control-label">Twitter账号</label>
                            <input readonly asp-for="Twitter" class="form-control border-input" />
                            <span asp-validation-for="Twitter" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="disabled" class="control-label">是否禁用</label>
                            <input readonly class="form-control border-input" value="@( Model.disabled ? "是" : "否")" />
                            <span asp-validation-for="disabled" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="adminId" class="control-label">创建者ID</label>
                            <input disabled asp-for="adminId" class="form-control border-input" />
                            <span asp-validation-for="adminId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="createDate" class="control-label">创建时间</label>
                            <input disabled asp-for="createDate" class="form-control border-input" />
                            <span asp-validation-for="createDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="modifyDate" class="control-label">修改时间</label>
                            <input disabled asp-for="modifyDate" class="form-control border-input" />
                            <span asp-validation-for="modifyDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <a asp-action="List" class="btn btn-round btn-fill btn-wd">返回列表</a>
                </div>
                <div class="clearfix"></div>
            </form>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {

        $("#liUser").addClass("active");

    });
</script>
