@model List<Entity.ContactEntity>

<div class="row">
    <div class="col-md-12">
        <div class="card card-plain">
            <div class="header">
                <h4 class="title">用户反馈</h4>
                
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>名称</th>
                            <th>主题</th>
                            <th>消息</th>
                            <th>是否处理</th>
                            <th>创建日期</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.contactId</td>
                                <td>@item.name</td>
                                <td>@( item.subject.Length > 20 ? item.subject.Substring(0,20) + "..." : item.subject)</td>
                                <td>@( item.message.Length > 20 ? item.message.Substring(0,20) + "..." : item.message)</td>
                                <td>@( item.isDeal ? "是" : "否")</td>
                                <td>@item.createDate</td>
                                <td>
                                    <a name="del" href="./ContactDetail?contactId=@item.contactId">点击查看</a>
                                    <a name="del" href="./DealContact?contactId=@item.contactId">标记为已处理</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="text-center">
                <input id="btnBack" type="button" class="btn btn-round btn-fill btn-wd" value="返 回" />
            </div>
        </div>
    </div>
</div>


@*<script type="text/javascript" src="~/Contents/WebJs/Common/commonJs.js"></script>*@
<script type="text/javascript">
    $(document).ready(function () {

        $("#liSetting").addClass("active");
        $("#btnBack").click(function () {
            window.history.back(-1);
        });
    });
</script>
